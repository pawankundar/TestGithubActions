{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types", "./custom_definitions"],
		"paths": {
			"*": ["node_modules/*", "src/types/*", "node_modules/@types"]
		}
	},
	"include": ["src/**/*"]
}